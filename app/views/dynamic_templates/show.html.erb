<div class="page-header">
  <h1><%= @template.name %></h1>
  <p class="text-muted">Created <%= time_ago_in_words(@template.created_at) %> ago</p>
</div>

<div class="card">
  <div class="card-header">
    <h3>Preview</h3>
  </div>
  <div class="card-body">
    <div class="template-preview">
      <%= @rendered_content.html_safe %>
    </div>
  </div>
</div>

<div class="actions mt-4">
  <%= link_to "Edit", edit_dynamic_template_path(@template), class: "btn btn-primary" %>
</div>
